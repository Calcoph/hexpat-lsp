{
  "name": "hexpat-language-server",
  "description": "hexpat language server",
  "license": "MIT",
  "version": "1.5.0",
  "categories": [],
  "keywords": [
    "language-server",
    "tower-lsp",
    "hexpat",
    "imhex"
  ],
  "engines": {
    "vscode": "^1.65.0"
  },
  "enabledApiProposals": [],
  "activationEvents": [
    "onLanguage:hexpat"
  ],
  "main": "./client/out/extension.js",
  "editor.semanticHighlighting.enabled": true,
  "contributes": {
    "languages": [
      {
        "id": "hexpat",
        "extensions": [".hexpat", ".pat"]
      }
    ],
    "configuration": {
      "type": "object",
      "title": "hexpat-language-server",
      "properties": {
        "hexpat-language-server.trace.server": {
          "type": "string",
          "scope": "window",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "enumDescriptions": [
            "No traces",
            "Error only",
            "Full log"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    },
    "semanticTokenTypes": [
        {
            "id": "bitfield",
            "description": "A field of bits",
            "superType": "struct"
        }
    ],
    "semanticTokenScopes": [
      {
        "scopes": {
          "bitfield": ["entity.name.type.bitfield",
          "entity.name.type.result",
          "entity.name.type",
          "entity.name.type.numeric",
          "entity.name.type.primitive",
          "support.class",
          "support.type",
          "storage.type.primitive",
          "storage.type"
          ]
        }
      }
    ]
  },
  "scripts": {
    "postinstall": "cd client && pnpm i",
    "vscode:prepublish": "yarn run build",
    "compile": "cross-env NODE_ENV=production tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint src --ext ts",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js",
    "build": "webpack --config webpack.config.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^12.12.0",
    "@types/vscode": "^1.44.0",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "cross-env": "^7.0.2",
    "electron-rebuild": "^1.11.0",
    "eslint": "^7.6.0",
    "mocha": "^8.0.1",
    "ts-loader": "^8.0.12",
    "typescript": "^4.4.3",
    "vscode-test": "^1.4.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "glob": "^7.1.7",
    "vscode-uri": "^3.0.2"
  }
}